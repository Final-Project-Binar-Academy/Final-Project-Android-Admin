<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    app:cardBackgroundColor="@drawable/bg_light"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:orientation="vertical"
        android:background="@drawable/bg_card">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingBottom="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="10sp"
                    android:text="Thu, 15 Oct"
                    android:textAppearance="@style/TextAppearance.MyApp.dateArrDep"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="15.40"
                    android:textAppearance="@style/TextAppearance.MyApp.timeArrDep"/>


                <TextView
                    android:id="@+id/codeIataFrom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="15sp"
                    android:text="SGN"
                    android:textAppearance="@style/TextAppearance.MyApp.textAirportFrom"/>

                <TextView
                    android:id="@+id/city1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="12sp"
                    android:text="Tehran, Iran"
                    android:textAppearance="@style/TextAppearance.MyApp.textDestintionFrom"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="04h00m"
                    android:textAppearance="@style/TextAppearance.MyApp.timeEst"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:rotation="90"
                    android:src="@drawable/plane_black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Business"
                    android:textAppearance="@style/TextAppearance.MyApp.classSeat"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Thu, 15 Oct"
                    android:textAppearance="@style/TextAppearance.MyApp.dateArrDep"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="15.40"
                    android:textAppearance="@style/TextAppearance.MyApp.timeArrDep"/>

                <TextView
                    android:id="@+id/codeIataTo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="SGN"
                    android:textAppearance="@style/TextAppearance.MyApp.textAirportFrom"/>

                <TextView
                    android:id="@+id/city2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Tehran, Iran"
                    android:textAppearance="@style/TextAppearance.MyApp.textDestintionFrom"/>


            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_marginTop="-5dp"
            android:layout_height="1dp"
            android:background="@color/basic" />


        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:src="@drawable/logo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Qatar Airways"
                    android:textAppearance="@style/TextAppearance.MyApp.planeJenis" />

                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_height="43dp"
                    android:paddingEnd="10dp"
                    android:paddingTop="3dp"
                    android:paddingStart="5dp"
                    android:gravity="center"
                    android:text="@string/bisnis"
                    android:textAllCaps="false"
                    app:cornerRadius="100dp"
                    app:icon="@drawable/person"
                    app:iconSize="25dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="10dp"
                    android:text="$150"
                    android:textAppearance="@style/TextAppearance.MyApp.cost" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_width="350dp"
                android:visibility="visible"
                android:layout_height="1dp"
                android:background="@color/abu"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatImageButton
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="200dp"
                    android:backgroundTint="@color/edit"
                    android:src="@drawable/ic_baseline_edit_24" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:backgroundTint="@color/delete"
                    android:src="@drawable/ic_baseline_delete_24"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>