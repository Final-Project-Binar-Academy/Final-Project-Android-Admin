<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.transaction.TransactionSuccessFragment"
    android:background="@drawable/bg_light"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:background="@drawable/bg_home"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_marginHorizontal="10dp"
                android:layout_height="70dp"
                android:textSize="14sp"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#FFF5F1"
                app:cardCornerRadius="15dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:text="@string/Success"
                        android:textColor="@color/text_blue"
                        android:fontFamily="@font/rubik_medium"
                        android:textAllCaps="false"
                        android:textSize="14sp"
                        android:backgroundTint="@color/birutua"
                        app:cornerRadius="15dp"
                        android:layout_width="110dp"
                        android:layout_height="70dp"
                        />

                    <com.google.android.material.button.MaterialButton
                        android:layout_marginStart="1dp"
                        android:layout_marginEnd="1dp"
                        android:text="@string/Pending"
                        android:textColor="@color/black"
                        android:fontFamily="@font/rubik_medium"
                        android:textAllCaps="false"
                        android:textSize="14sp"
                        app:strokeColor="@color/abu"
                        android:gravity="center"
                        android:backgroundTint="@color/white"
                        android:layout_width="110dp"
                        android:layout_height="70dp"
                        />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/canceled"
                        android:backgroundTint="@color/white"
                        app:strokeColor="@color/abu"
                        android:gravity="center"
                        android:text="@string/Canceled"
                        android:textColor="@color/black"
                        android:fontFamily="@font/rubik_medium"
                        android:textAllCaps="false"
                        android:textSize="14sp"
                        android:layout_width="110dp"
                        android:layout_height="70dp"
                        />


                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/list_transaction"/>

    </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>